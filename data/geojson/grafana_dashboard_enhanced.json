        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"acoustic-guardian\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"acoustic_guardian\" and r._field == \"threat_detected\")",
            "refId": "A"
